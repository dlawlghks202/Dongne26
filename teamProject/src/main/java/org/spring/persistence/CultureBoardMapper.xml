<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <!-- BoardMapper 인터페이스를 구현한다는 의미 --> 
  <mapper namespace="org.spring.persistence.CultureBoardMapper">
 	
 	<!-- <select id="selectList" resultType="org.spring.domain.CultureBoardDTO">
 		SELECT * FROM practice_culture_board
 	</select> -->
	
	<!-- 페이지 수 산출용(?) 전체 게시물 수 계산 -->
	<select id="selectTotalCount" resultType="int">
		SELECT COUNT(*) FROM culture_board
	</select>
	
	<!-- 북마크 기능 -->
	<insert id="bookmark">
		INSERT INTO bookmark_culture_board (culture_bno, user_email) VALUES (#{culture_bno},#{user_email})
	</insert>
	
	<!-- 북마크 취소 -->
	<delete id="bookmarkDel">
		DELETE FROM bookmark_culture_board WHERE culture_bno = #{culture_bno} AND user_email = #{user_email}
	</delete>
		
	<!-- 북마크 확인 -->
	<select id="bookmarkChk" resultType="int">
		SELECT COUNT(*) FROM bookmark_culture_board WHERE culture_bno = #{culture_bno} AND user_email = #{user_email}
	</select>
	
	<select id="getTotalCount" resultType="int" parameterType="org.spring.domain.culture.Criteria">
		SELECT COUNT(culture_bno) FROM culture_board
		<where>
			<if test="area != null and area != ''">
				(culture_area LIKE CONCAT("%",#{area},"%"))
			</if>
			<if test="area != null and area != '' and classify != null and classify !=''">
				AND
			</if>
			<if test="classify != null and classify !=''">
				(culture_classify LIKE CONCAT("%",#{classify},"%"))
			</if>
			<if test="type != null and keyword != null and type != '' and keyword != ''">
				<choose>
					<when test="type == 'all'">
					(titlec LIKE CONCAT("%",#{keyword},"%") OR
					placec LIKE CONCAT("%",#{keyword},"%"))
					</when>
					<otherwise>
						${type} LIKE CONCAT("%",#{keyword},"%")
					</otherwise>
				</choose>
			</if>                           
		</where>
	</select>
	
  </mapper>